
<ul>
	<% @errors && @errors.each do |e| %>
	  <li><%= e %></li>
	<% end %>
</ul>

<%= form_for @user do |f| %>
  <%= f.label :first_name %>
  <%= f.text_field :first_name %><br>
  <%= f.label :last_name %>
  <%= f.text_field :last_name %><br>
  <%= f.label :address %>
  <%= f.text_field :address %><br>
  <%= f.label :suburb %>
  <%= f.text_field :suburb %><br> 
  <%= f.label :country %>
  <%= f.text_field :country %><br>
  <%= f.label :phone%>
  <%= f.text_field :phone %><br>  
  <%= f.label :username%>
  <%= f.text_field :username %><br> 
  <%= f.label :profile_url %>
  <%= f.text_field :profile_url %><br> 
  <%= f.label :email %>
  <%= f.text_field :email %><br>
  <%= f.label :password %>
  <%= f.password_field :password %><br>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %><br>
  <%= f.submit %>
<% end %>

